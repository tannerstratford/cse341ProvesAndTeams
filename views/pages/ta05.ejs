<!DOCTYPE html>
<html>

<head>
    <% include ../includes/header.ejs %>
</head>

<% if(color) { %>

    <body style="background-color: <%= color %>;">
        <% } else { %>

            <body>

                <% } %>
                    <% include ../includes/nav.ejs %>
                        <div>
                            <form action="/ta05/change-style" method="POST">
                                <div>
                                    <label for="color">Color</label>
                                    <input type="color" name="color" id="color">
                                </div>

                                <div><button type="submit">Change</button></div>

                                <div>
                                    <% if(!count) { %>
                                        <% count=0; %>
                                            <% } %>
                                                <h1>Count: <%=count%>
                                                </h1>
                                </div>
                            </form>

                            <form action="/ta05/countUp" method = "POST">

                                <div><button type="submit">Count up</button></div>
                            </form>
                            <form action="/ta05/countDown" method = "POST">
                                <div><button type="submit">Count down</button></div>
                            </form>

                        </div>


            </body>

</html>